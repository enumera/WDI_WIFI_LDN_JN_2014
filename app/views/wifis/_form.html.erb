<%= form_for(@wifi) do |f| %>
  <% if @wifi.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wifi.errors.count, "error") %> prohibited this wifi from being saved:</h2>

      <ul>
      <% @wifi.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="leftdiv"> 
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.text_field :password %>
    </div>
    <div class="field">
      <%= f.label :free_or_paid %><br />
      <%= f.select :free_or_paid, options_for_select([:Free, :Paid]) %>
    </div>
    <div class="field">
      <%= f.label :share_scope %><br />
      <%= f.select :share_scope, options_for_select([:Private, :Public, :"Share with groups"]) %>
    </div>
    <div class="field">
    <%= f.label :venue_type_id %><br >
    <%= f.collection_select :venue_type_id, VenueType.all, :id, :name %>
    </div>    
  </div>
  <div id="rightdiv">

    <div class="field">
      <%= f.label :business_name %><br />
      <%= f.text_field :business_name, :class=> "uneditable-input", :disabled => true  %>
    </div>
    <div class="field">
      <%= f.label :address_line_1 %><br />
      <%= f.text_field :address_line_1 %>
    </div>
    <div class="field">
      <%= f.label :address_line_2 %><br />
      <%= f.text_field :address_line_2 %>
    </div>
    <div class="field">
      <%= f.label :city %><br />
      <%= f.text_field :city %>
    </div>
    <div class="field">
      <%= f.label :postcode %><br />
      <%= f.text_field :postcode %>
    </div>
    <div class="field">
      <%= f.label :country %><br />
      <%= f.text_field :country %>
    </div>
    <div class="field">
      <%= f.label :phone %><br />
      <%= f.number_field :phone %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
    <% end %>
 </div>

    <div id="lastdiv">
          <% if !@wifi.id.nil? %>
            <h3>Reviews: ratings and comments</h3>
            <% if @reviews.size == 0 %>
              <p> There are no comments for this wifi </p>
            <%else%>
              <% @reviews.each do |review| %>
              <%= review.comment %><br>
              <% end %>
              <%= paginate @reviews %>
          <%end%> 
        <%end%>     
        </div>


     <% if !@wifi.id.nil? %>
       <%= form_for [@wifi, Review.new] do |f| %>
          <%= f.label :comment, "Add a comment:" %>
          <%= f.text_field :comment %><br>
          <%= f.submit "create" %>
      <% end %>
  <%end%>

 

